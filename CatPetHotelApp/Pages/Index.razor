@page "/"

<PageTitle> Little Paws OnBoard</PageTitle>

<h1>Hello,Welcome to Little Paws OnBoard!</h1>


<div class="container align-content-lg-center ">
    <div class="row justify-content-md-center">
        <div class="col col-lg-2 ">
            <button type="button" class="btn btn-outline-primary btn-outline-dark btn-lg" @onclick="@NavigateToCatDetails">View Checkin Cats</button>

</div>
        <div class="col-md-auto">
            </div>
        <div class="col col-lg-2">
            <button type="button" class="btn btn-outline-primary btn-outline-dark btn-lg" @onclick="@NavigateToHomeNewCatRegistration">Register New Cat</button>
        </div>
    </div>
</div>

@code {
    [Inject]
    public NavigationManager NavigationManager { get; set; }

    private void NavigateToCatDetails()
    {
        NavigationManager.NavigateTo("/cats/Details");
    }
    private void NavigateToHomeNewCatRegistration()
    {
        NavigationManager.NavigateTo("/cats/newcat");
    }
}
